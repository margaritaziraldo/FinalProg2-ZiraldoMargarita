<%- include('./partials/head') %>
</head>

<body class="body-categoria">
    <%- include('./partials/header') %>


    <div class="uk-section ">        
        
        <h1 class="uk-text-center"><%= title %> </h1>

        <div class="uk-container  uk-flex uk-flex-center">
            
            <form id="register-form" action="/player/create" method="POST"
            class="uk-background-secondary uk-width-1-3 uk-flex uk-flex-center uk-padding-small">
            
                <div class="uk-margin uk-width-1-1">
                    <div class="uk-margin uk-width-1-1">
                        <div class="uk-inline uk-width-1-1">
                            <span class="uk-form-icon" uk-icon="icon: user"></span>
                            <input id="foto" class="uk-input" type="text"  name="nombre" placeholder="Nombre Jugador" required>
                        </div>
                    </div>
                    <div class="uk-margin uk-width-1-1">
                        <div class="uk-inline uk-width-1-1">
                            <span class="uk-form-icon" uk-icon="icon: user"></span>
                            <input id="apellido" class="uk-input" type="text"  name="apellido" placeholder="Apellido" required>
                        </div>
                    </div>
                    <div class="uk-margin uk-width-1-1">
                        <div class="uk-inline uk-width-1-1">
                            <span class="uk-form-icon" uk-icon="icon: user"></span>
                            <input id="foto" class="uk-input" type="text" name="foto" placeholder="Nombre foto" required>
                        </div>
                    </div>
                    <div class="uk-margin uk-width-1-1">
                        <div class="uk-inline uk-width-1-1">
                            <span class="uk-form-icon" uk-icon="icon: user"></span>
                            <input class="uk-input" type="text" placeholder="Posición" name="posicion" value="">
                        </div>
                    </div>

                    <div class="uk-margin uk-width-1-1">
                        <div class="uk-inline uk-width-1-1">
                            <span class="uk-form-icon" uk-icon="icon: user"></span>
                            <select id="idEquipo" class="uk-input" name="idEquipo" required>
                                <option value="">Elegí equipo</option>
                                <option value="1">Inter Miami CF</option>
                                <option value="2">Benfica</option>
                                <option value="3">Aston Villa</option>
                                <option value="4">Atlético de Madrid</option>
                                <option value="5">Manchester City</option>
                                <option value="6">Chelsea</option>
                                <option value="7">Tottenham Hotspur</option>
                                <option value="8">Manchester United</option>
                            </select>
                        </div>
                    </div>
                    <button class="uk-button uk-button-primary uk-width-1-1 uk-margin-small-bottom" type="submit">Crear</button>
                </div>
            </form>
            
            
        </div>
    </div>
</body>

</html>